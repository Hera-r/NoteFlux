{
  "manifest_version": 3,
  "name": "Auto Highlighter & Notes",
  "version": "3.0",
  "description": "Select text to highlight automatically. Click to annotate.",
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}

